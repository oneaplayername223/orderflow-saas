generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AccountType {
  TRIAL
  NORMAL
  PRO
  ENTERPRISE
}

model Billing {
  id        String   @id @default(uuid())
  accountId   Int
  amount    Float
  accountType AccountType
  createdAt DateTime @default(now())
  expireAt  DateTime
}

